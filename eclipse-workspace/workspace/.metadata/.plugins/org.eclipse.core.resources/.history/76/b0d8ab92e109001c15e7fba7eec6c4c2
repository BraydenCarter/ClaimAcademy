package projects;
import java.util.Scanner;
public class loopPracticeQuestions {

	public static void main(String[] args) {
		/*Using the built in “Math.random()” function, create a guessing game 
		 * that uses a Do/While loop that repeats until the user correctly
		 *  guesses the answer. If the guess is high, display "Too high, try 
		 *  again." If the answer is lower then "Too low, try again."
		 */
		System.out.println("Please enter a number below.");
		Scanner in = new Scanner(System.in);
		int num = in.nextInt();
		int rightNum = 10;
		int end = 0;
		
		do {
			System.out.println("Too high, try again.");
		}
		while 
			(num > rightNum);
		
		do {
			System.out.println("Too low, try again.");
		}
		
		while 
			(num < rightNum);
		
		
		do {
			System.out.println("Correct! You guessed the right number!");
			end++;
		}
		while 
			(num == rightNum);	
		in.close();
	}
}
